extends layout

block content
  block body
    nav.navbar.navbar-expand.navbar-light.bg-light
      a.navbar-brand Sklepik Here
        ul.navbar-nav.mr-auto
          ui.nav-item
            a.nav-link(href='/') Home
          ui.nav-item
            a.nav-link.active(href='#') Koszyk
        ul.navbar-nav.form-inline
          if username
            li.nav-item
              a Witaj #{username}
            li.nav-item
              a.nav-link(href='/logout') Logout
          else
            li.nav-item
              a.nav-link(href='/login') Login
            li.nav-item
              a.nav-link(href='/register') Register

    .container-fluid
      .col-auto
        each item in basket
          .row.justify-content-center
            .col-4.my-auto
              img.card-img(src='' +item.img alt='')
            .col-4.my-auto.text-center
              p #{item.name}
            .col-2.my-auto.text-center
              p #{item.price} KK
            .col-2.my-auto.text-center
              p #{item.count}