extends layout

block content
  if alert
    .alert.alert-danger(role='alert')
      != alert
  if addFlash != ''
    .alert.alert-success(role='alert')
      != addFlash
  block body
    nav.navbar.navbar-expand.navbar-light.bg-light
      a.navbar-brand Sklepik Here
        ul.navbar-nav.mr-auto
          ui.nav-item
            a.nav-link(href='/') Home
          ui.nav-item
            a.nav-link(href='/cart') Koszyk
          ui.nav-item
            a.nav-link(href='/orders') Zamówienia
          ui.nav-item
            a.nav-link(href='/users') Użytkownicy
        ul.navbar-nav.form-inline
          if username
            li.nav-item
              a Witaj #{username}
            li.nav-item
              a.nav-link(href='/logout') Logout
          else
            li.nav-item
              a.nav-link(href='/login') Login
            li.nav-item
              a.nav-link(href='#') Register

    form(method='POST' action='/addProduct')
      div.form-group
        input#name.form-control(type='text' placeholder='name' name='name')
      div.form-group
        input#price.form-control(type='text' placeholder='price' name='price')
      div.form-group
        textarea#description.form-control(type='text' placeholder='description' name='description')
      div.form-group
        input#img.form-control(rows='3' type='text' placeholder='img-url' name='img')
      button.btn.btn-primary(type='submit') Dodaj produkt