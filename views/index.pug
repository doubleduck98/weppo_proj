extends layout

block content
  block body
    nav.navbar.navbar-expand.navbar-light.bg-light
      a.navbar-brand Sklepik Here
        ul.navbar-nav.mr-auto
          ui.nav-item
            a.nav-link.active(href='/') Home
          ui.nav-item
            a.nav-link(href='#') Koszyk
        ul.navbar-nav.form-inline
          if username
            li.nav-item
              a Witaj #{username}
            li.nav-item
              a.nav-link(href='/logout') Logout
          else
            li.nav-item
              a.nav-link(href='/login') Login
            li.nav-item
              a.nav-link(href='/register') Register

    .container-fluid
      .col-auto
        .row.justify-content-center
          each item in products
            .col-xs-8.col-sm-8.col-md-8.col-lg-4.col-xl-3
              .card.h-100
                a
                  img.card-img-top(src='' +item.img alt='')
                .card-body
                  h4.card-title
                    a #{item.name}
                  h5 #{item.price} KK
                  p.card-text
                    | #{item.description}
                .card-footer