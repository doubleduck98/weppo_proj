extends layout

block content
  if alert
    .alert.alert-danger(role='alert')
      != alert
  block body
    nav.navbar.navbar-expand.navbar-light.bg-light
      a.navbar-brand Sklepik Here
        ul.navbar-nav.mr-auto
          ui.nav-item
            a.nav-link(href='/') Home
          ui.nav-item
            a.nav-link(href='/cart') Koszyk
        ul.navbar-nav.form-inline
          if username
            li.nav-item
              a Witaj #{username}
            li.nav-item
              a.nav-link(href='/logout') Logout
          else
            li.nav-item
              a.nav-link(href='#') Login
            li.nav-item
              a.nav-link(href='/register') Register

    .container
      form(method='POST' action='/admin')
        input#password.form-control(type='password' placeholder='potwierdź hasło administratora' name='password')
        button.btn.btn-primary(type='submit') Zaloguj się