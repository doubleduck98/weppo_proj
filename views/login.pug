extends layout

block content
  if alert
    .alert.alert-danger(role='alert')
      != alert
  block body
    nav.navbar.navbar-expand.navbar-light.bg-light
      a.navbar-brand Sklepik Here
        ul.navbar-nav.mr-auto
          ui.nav-item
            a.nav-link(href='/') Home
          ui.nav-item
            a.nav-link(href='/cart') Koszyk
        ul.navbar-nav.form-inline
          if username
            li.nav-item
              a Witaj #{username}
            li.nav-item
              a.nav-link(href='/logout') Logout
          else
            li.nav-item
              a.nav-link.active(href='#') Login
            li.nav-item
              a.nav-link(href='/register') Register

    .container
      form#f2(method='GET' action='/register' type='hidden')
      form#f1(method='POST' action='/login')
        div.form-group
          input#username.form-control(type='text' placeholder='username' name='username')
        div.form-group
          input#password.form-control(type='password' placeholder='password' name='password')
        button.btn.btn-primary(type='submit' form='f1') Zaloguj się
        |
        |
        button.btn.btn-primary(onclick='/register' form='f2') Zarejestruj się

